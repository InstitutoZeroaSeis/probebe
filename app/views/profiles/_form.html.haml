%section.born-or-not
  .form-block.row
    %button.born-or-not-pregnancy
      Gestante
    %span.born-or-not-or
      Ou
    %button.born-or-not-born
      Já nasceu

.clearfix
%section.edit-profile-form
  = simple_form_for profile,
    url: profile_path,
    wrapper: :custom_forms,
    html: { class: 'form-horizontal new-children-form' } do |f|

    = f.error_notification
    = render partial: 'base_errors', locals: { model: f.object }

    %h3 Dados de Contato

    %form.edit-profile-form-address
      %fieldset.edit-profile-form-address-fieldset
        .row
          .col-sm-2
            %label CEP
            %input.form-control
          .col-sm-10
            %label Endereço
            %input.form-control

        .row
          .col-sm-2
            %label Complemento
            %input.form-control
          .col-sm-6
            %label Cidade
            %input.form-control
          .col-sm-2
            %label Estado
            %input.form-control
          .col-sm-2
            %label.profile-form-block-label &nbsp;
            %button.profile-form-save-button Salvar


    %h3 Telefones
    %form.edit-profile-form-address
      %fieldset.edit-profile-form-address-fieldset
        .row
          .col-sm-3
            %label Celular
            %input.form-control
          .col-sm-3
            %label Residencial
            %input.form-control
          .col-sm-3
            %label Profissional
            %input.form-control
          .col-sm-3
            %label.profile-form-block-label &nbsp;
            %button.profile-form-save-button Salvar

    %h3 Sistema do Celular
    %form.edit-profile-form-address
      %fieldset.edit-profile-form-address-fieldset
        .row
          .col-sm-3
            %label
              %input{type: 'radio'}
              iOS
          .col-sm-3
            %label
              %input{type: 'radio'}
              Android
          .col-sm-3
            %label
              %input{type: 'radio'}
              Outros
          .col-sm-3
            %button.profile-form-save-button Salvar

      = f.button :submit
