%section.edit-profile-form-children{ 'ng-controller' => 'ChildCtrl' }
  %h2 Cadastrar Filhos
  %p Você pode adicionar mais filhos apenas clicando em um dos botões desejados

  %section.born-or-not
    .form-block.row
      %button.born-or-not-pregnancy.add-child{ 'ng-click' => 'addNewChild(false)' }
        Gestante
      %span.born-or-not-or
        Ou
      %button.born-or-not-born.add-child{ 'ng-click' => 'addNewChild(true)' }
        Já nasceu
  .clearfix
  .children{ 'ng-repeat' => 'child in children' }
    = render 'child'
  = render 'new_child'
