    .container
      .row
        .col-md-8
          = yield
        .col-md-4
          .well
            %form{action: posts_path, method: :get}
              %h4= t('views.blog.search')
              .input-group
                %input.form-control{type: 'text', name: 'search'}
                %span.input-group-btn
                  %button.btn.btn-default{:type => "submit"}
                    %span.glyphicon.glyphicon-search
