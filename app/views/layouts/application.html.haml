%html
  %head
    %title Pro Bebe
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = render partial: 'flash_messages'
  %body
    .container
      .navbar.navbar-default{:role => "navigation"}
        .container-fluid
          .navbar-header
            %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to 'Pro BebÃª', root_path, class: 'navbar-brand'
          .navbar-collapse.collapse
            %ul.nav.navbar-nav
              %li.active= link_to 'Home', root_path
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Perfil
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li= link_to 'Visualizar Perfil', personal_profile_path(current_user.personal_profile)
                  %li= link_to 'Editar Perfil', edit_personal_profile_path(current_user.personal_profile)
            %ul.nav.navbar-nav.navbar-right
              %li
                %a{href: personal_profile_path(current_user.personal_profile)}
                  %span.glyphicon.glyphicon-user
                  = current_user.personal_profile.name
              %li
                %a{href: sign_out_path}
                  %span.glyphicon.glyphicon-off
                  %span Sair

      .main
        = yield
