= simple_form_for @profile, url: contact_profile_path,  html: { class: 'form-horizontal' } do |f|
  = f.error_notification
  = render partial: 'base_errors', locals: { model: f.object }
  .col-sm-offset-2
    %h3= "#{I18n.t('activerecord.attributes.contact_profile.address')}"
    %hr  

  = f.input :street
  = f.input :state
  = f.input :city

  .col-sm-offset-2
    %h3= "#{I18n.t('activerecord.models.phone')}"
    %hr
  = render partial: 'phones/form', locals: { form_builder: f }

  .col-sm-offset-2
    = f.button :submit