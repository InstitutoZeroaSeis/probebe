- if notice
  :javascript
    $(document).ready(function() {
      noty({ text: "#{notice}", layout: 'top', type: 'information', timeout: '5000' });
    });
- if alert
  :javascript
    $(document).ready(function() {
      var timeout = '5000';
      if("#{timer}") timeout = #{timer};
      noty({ text: "#{alert}", layout: 'top', type: 'warning', timeout: timeout });
    });
