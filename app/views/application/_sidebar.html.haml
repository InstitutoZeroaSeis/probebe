%aside.blog-sidebar.col-md-3

  %nav
    - if current_user.nil?
      .signup-banner-sidebar
        %a{href: '/#sign-up'}
          %figure
          %label
            %b
              Cadastre-se
            e receba mensagens
            %b
              gratuitas
            em seu celular!

  %nav.blog-nav
    %ul.home-categories-list.category-health
      - categories.each do |category|
        %li.home-categories-item
          = link_to category.name, categories_articles_path(category_id: category)

  = render 'article_for_period'

  %nav.blog-tags
    %ul.home-categories-list.category-education
      %h3 Tags
      .row
        .col-md-4.tag-order-text ordem:
        - if show_page
          .col-md-4.tag-order-text
            = link_to "quantidade", article_path(article, order: 'quantity')
          .col-md-4.tag-order-text
            = link_to "alfabética", article_path(article, order: "alpha")
        - else
          .col-md-4.tag-order-text
            = link_to "quantidade", articles_path(order: 'quantity')
          .col-md-4.tag-order-text
            = link_to "alfabética", articles_path(order: "alpha")

      %li.home-categories-item= render tags
    .more +
