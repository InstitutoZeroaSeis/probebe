= render 'home_categories'

%section.subjects.container.signed-in
  - @categories_articles.each do |category, articles|
    .subject.col-md-9{ id: category.slug }
      .row.col-md-12
        = render "subject_header", category: category
      - articles.each do |article|
        .col-md-6
          .subject-picture-split
            = link_to article_path(article) do
              %figure
                %img{ width: 300, height: 200, src: article.thumb_image_cover.url(:content)}
            .subject-picture-split-description
              = link_to article_path(article) do
                %p= article.post_summary
      = link_to categories_articles_path(category) do
        %button.subject-picture-split-see-all-posts.center-block{ style: "background-color: #{category.color}" }
          = t('views.application.show_all_post_from_this_category')
