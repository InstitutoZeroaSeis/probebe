= render 'home_categories'

%section.subjects.container
  - @categories_articles.each do |category|
    .subject.col-md-9{id: category[:category] }
      .row.col-md-12
        = render "subject_header_#{category[:category]}"
      - category[:articles].each do |article|
        .col-md-6
          .subject-picture-split
            %figure
              %img{width: 300, height: 200, src: article.image_cover}
            .subject-picture-split-description
              %p
                - if article.summary.blank?
                  = truncate Nokogiri::HTML(article.text).text, length: 500
                - else
                  = article.summary
      = link_to posts_path(category: category[:category]) do
        %button.subject-picture-split-see-all-posts.center-block{:class => "#{category[:category]}-button"}
          = t('views.application.show_all_post_from_this_category')
