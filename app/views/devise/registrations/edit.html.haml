%section.main.container-fuild
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), wrapper: :custom_forms, :html => { :method => :put,  class: 'form-horizontal change-password-form'  }) do |f|
    %section.edit-profile-form
      .container
        %h3= "Alterar Senha"
        %fieldset.edit-profile-form-personal-information
          .row
            .col-sm-12
              = f.input :password
            .col-sm-12
              = f.input :password_confirmation
            .col-sm-12
              = f.input :current_password
        %div.change-password-submit= f.submit t('carnival_devise.registrations.update'),:class => "profile-form-save-button"
