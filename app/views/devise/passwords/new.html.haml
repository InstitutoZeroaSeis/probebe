= render 'site_header'

.footer-sign-up.container#sign-up
  %h2
    = t('carnival_devise.passwords.forgot')
    ?
%section.main.container-fuild
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post,  class: 'sign-up-form' }) do |f|
    .container
      = devise_error_messages!
      .row.form-group
        .col-sm-12
          = f.email_field :email, :autofocus => true, :placeholder => 'Email', :class => "form-control"
      .row
        .col-sm-12
          = f.submit t('carnival_devise.passwords.send_reset_instruction'), :class => "btn btn-default"
