.site-banner
  %ul.site-banner-list
    %li.site-banner-item
      %figure.site-banner-image{ style: "background-image: url(#{@post.cover})" }
        %img{ src: @post.cover }
    %li.site-banner-item
      %figure.site-banner-image{ style: "background-image: url(#{@post.cover})" }
        %img{ src: @post.cover }

%section.main.container-fuild
  %section.subjects.container{ class: @post.category_type }
    .posts.subject.col-md-9
      .single-post.col-md-12
        %h2.post_title= @post.title
        %h5
          %i= @post.intro_text
        %p.periodo-label{ class: "period-#{@post.pregnancy_or_child_life_period}" }
          = t("views.blog.#{@post.pregnancy_or_child_life_period}")
        %p.categoria-label= @post.category_name
        %hr
        %p
          = raw @post.text

        %hr
        %p.lead
          %img{width: 50, height: 50, src: @post.author_photo_url}
          = t('views.blog.by', author: @post.author_name)

        .single-post-tags
          %p
            %strong.lead= t('views.blog.tags')
          %p= render @post.tags

        %p
          %h2= t('views.blog.related_post')
          = render partial: 'related_post', collection: @post.related_posts

        %ul.pager
          %li.previous
            = link_to t('views.blog.back_html'), root_path

    = render 'sidebar',
      tags: @post.tags_for_sidebar,
      categories: @post.categories_for_sidebar
