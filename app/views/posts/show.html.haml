.site-banner
  %ul.site-banner-list
    %li.site-banner-item
      %figure.site-banner-image{ style: "background-image: url(#{@post.image_cover})" }
        %img{ src: @post.image_cover }
    %li.site-banner-item
      %figure.site-banner-image{ style: "background-image: url(#{@post.image_cover})" }
        %img{ src: @post.image_cover }

%section.main.container-fuild
  %section.subjects.container{ class: @post.category_type }
    .posts.subject.col-md-9
      .single-post.col-md-12
        %h2.post_title= @post.titleized_title
        %p.periodo-label{ class: "period-#{@post.pregnancy_or_child_life_period}" }
          = t("views.blog.#{@post.pregnancy_or_child_life_period}")
        %p.categoria-label= @post.category_name
        %hr
        %p
          = raw @post.text

        = render @post.tags
        %hr
        %p.lead
          = t('views.blog.by', author: @post.author_name)

        %h2= t('views.blog.related_post')
        = render partial: 'related_post', collection: @post.related_posts

        %ul.pager
          %li.previous
            = link_to t('views.blog.back_html'), root_path

    = render 'sidebar', tags: @tags
