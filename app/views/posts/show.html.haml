%section.subjects.container
  .posts.subject.col-md-9
    .single-post.col-md-12
      %h2.post_title= @post.titleized_title
      %p= @post.category_name
      %p= t("views.blog.#{@post.pregnancy_or_child_life_period}")
      %hr
      %p
        = raw @post.text

      = render @post.tags
      %figure
        %img{width: 50, height: 50, src: @post.author_photo_url}

      %p.lead= t('views.blog.by', author: @post.author_name)
      = l(@post.created_at)

      %h2= t('views.blog.related_post')
      = render partial: 'related_post', collection: @post.related_posts

      %ul.pager
        %li.previous
          = link_to t('views.blog.back_html'), root_path

  = render 'sidebar', tags: @post.tags
