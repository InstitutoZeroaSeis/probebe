.post.col-md-6{class: "#{post.category_name.parameterize}"}
  %hr
  %p.created-at= l(post.created_at)
  %h2.post-title= link_to post.titleized_title, post_path(post)
  %p.periodo-label{class: "priodo-#{post.pregnancy_or_child_life_period}"}= t("views.blog.#{post.pregnancy_or_child_life_period}")
  %p.categoria-label= post.category_name
  %figure
    %img{width: 300, height: 200, src: post.image_cover}
  %hr
  %p= post.post_summary
  = link_to post_path(post), class: "btn btn-primary education-button btn-list" do
    = t('views.blog.read_more')
