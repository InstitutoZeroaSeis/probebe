# vim: filetype=yaml
files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/03_mute_rpush":
    mode: "000755"
    content: |
      if [ -f /var/app/support/pids/rpush.pid ]
      then
        kill -USR1 `cat /var/app/support/pids/rpush.pid` || true
      fi

  "/opt/elasticbeanstalk/hooks/appdeploy/post/50_restart_rpush":
    mode: "000755"
    content: |
      cd /var/app/current

      if [ -f /var/app/support/pids/rpush.pid ]
      then
        kill -TERM `cat /var/app/support/pids/rpush.pid` || true
        rm -rf /var/app/support/pids/rpush.pid
      fi

      . /opt/elasticbeanstalk/support/envvars

      sleep 5

      chruby-exec 2.1 -- bundle exec rpush \
        --rails-env=production \
        --pid-file=/var/app/support/pids/rpush.pid
