# vim: filetype=yaml
container_commands:
  01seed:
    command: rake db:seed

packages:
  yum:
    git: []

option_settings:
  - option_name: RAILS_SKIP_ASSET_COMPILATION
    value: true

files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/50_restart_rpush":
    mode: "000755"
    content: |
      cd /var/app/current

      if [ -f /var/app/support/pids/rpush.pid ]
      then
        kill -TERM `cat /var/app/support/pids/rpush.pid`
        rm -rf /var/app/support/pids/rpush.pid
      fi

      . /opt/elasticbeanstalk/support/envvars

      sleep 5

      chruby-exec 2.1.4 -- bundle exec rpush \
        --rails-env=production \
        --pid-file=/var/app/support/pids/rpush.pid

  "/opt/elasticbeanstalk/hooks/appdeploy/pre/03_mute_rpush":
    mode: "000755"
    content: |
      if [ -f /var/app/support/pids/rpush.pid ]
      then
        kill -USR1 `cat /var/app/support/pids/rpush.pid`
      fi

  "/opt/elasticbeanstalk/hooks/appdeploy/post/50_restart_sidekiq":
    mode: "000755"
    content: |
      cd /var/app/current

      if [ -f /var/app/support/pids/sidekiq.pid ]
      then
        kill -TERM `cat /var/app/support/pids/sidekiq.pid`
        rm -rf /var/app/support/pids/sidekiq.pid
      fi

      . /opt/elasticbeanstalk/support/envvars

      sleep 5

      chruby-exec 2.1.4 -- bundle exec sidekiq \
        -e production \
        -P /var/app/support/pids/sidekiq.pid \
        -C /var/app/current/config/sidekiq.yml \
        -L /var/app/support/logs/sidekiq.log \
        -d

  "/opt/elasticbeanstalk/hooks/appdeploy/pre/03_mute_sidekiq":
    mode: "000755"
    content: |
      if [ -f /var/app/support/pids/sidekiq.pid ]
      then
        kill -USR1 `cat /var/app/support/pids/sidekiq.pid`
      fi
